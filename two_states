import DataBase_Countries
import requests
import streamlit as st


url = 'https://rough-sun-2523.fly.dev/api/CH/IT'
response = requests.get(url)


if response.status_code == 200:
    data = response.json()  

    # Now, check if the 'category' indicates a visa is required
    if 'visa required' in data.get('category', '').lower():
        print('A visa is required.')
    else:
        # If 'visa required' is not in category, it might be visa-free, on arrival, etc.
        print('A visa is not required.')

    # Optionally, print the full JSON response to see all details
else:
    print(f"Failed to retrieve data. Status code: {response.status_code}")
